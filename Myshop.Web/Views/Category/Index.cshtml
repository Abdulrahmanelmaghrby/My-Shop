@model IEnumerable<Category>
@{
    ViewBag.PageTitlle = "Category Management";
    ViewBag.CardTitlle = " Categories List";
    Layout = "~/Views/Shared/_DashBoard.cshtml";

}

<div>
    <div class="mb-3">
        <a class="btn btn-primary" asp-action="Create" asp-controller="Category">Create</a>
    </div>
    <table class="table table-hover" width="100%">
        <tr>
            <td>Name</td>
            <td>descreption</td>
            <td>CreatedTime</td>
            <td>Actions</td>
        </tr>
         @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Descreprtion</td>
                <td>@item.CreatedTime</td>
            <td>
            <a class="btn btn-success" asp-action="Edit" asp-controller="Category" asp-route-id="@item.Id">Edit</a>
            <a class="btn btn-danger" asp-action="Delete" asp-controller="Category" asp-route-id="@item.Id">Delete</a>
            </td>
            </tr> 
        }
        
    </table>
</div>
