@model Category
@{
    ViewBag.PageTitlle = "Category Management";
    ViewBag.CardTitlle = "Create Category";
    Layout = "~/Views/Shared/_DashBoard.cshtml";

    // ViewData["Title"] = "Edit";
}

@* <h3>Create Form</h3> *@
  
    <form method="Post">
        <div class="mb-3">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name"class="text-danger"></span>
        </div>

    <div class="mb-3">
        <label asp-for="Descreprtion"></label>
        <input asp-for="Descreprtion" class="form-control" />
        <span asp-validation-for="Descreprtion" class="text-danger"></span>
        </div>

        <div class ="mb-3">
            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-action="Index" asp-controller="Category" class="btn btn-warning">Back to Index</a>
        </div>
        
    </form>

@section Scripts{
    <partial name="_ValidationScriptsPartial"></partial>
}

